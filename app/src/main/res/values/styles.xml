    <style name="Button.Solid" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextView.ButtonLabel1</item>
        <item name="android:background">@drawable/bg_rounded_corner_green</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">true</item>
        <item name="android:padding">@dimen/h1</item>
    </style>

    <style name="Button.Transparent" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextView.ButtonLabel2</item>
        <item name="android:background">@drawable/button_border_colored_drawable</item>
        <item name="android:ellipsize">marquee</item>
