    <!-- Toolbar Bar Style -->
    <!-- *************** -->


    <style name="backArrowTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/green_1</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:titleTextColor">@color/green_1</item>
        <item name="android:textColor">@color/green_1</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:titleTextAppearance">@style/TextView.Headline6</item>
